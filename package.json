{
  "name": "card-game-pdf-transformer",
  "version": "1.0.0",
  "description": "A web application for transforming PDF files into print-and-play card game formats",
  "private": true,
  "type": "module",
  "keywords": [
    "pdf",
    "card-games",
    "print-and-play",
    "react",
    "typescript",
    "vite"
  ],
  "scripts": {
    "dev": "npm run copy-worker && npx vite",
    "build": "npm run copy-worker && tsc -b && npx vite build",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "preview": "npx vite preview",
    "start": "npm run dev",
    "copy-worker": "node -e \"require('fs').copyFileSync('node_modules/pdfjs-dist/build/pdf.worker.min.mjs', 'public/pdf.worker.min.js')\"",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui"
  },
  "dependencies": {
    "jspdf": "^3.0.1",
    "lucide-react": "^0.441.0",
    "pdfjs-dist": "^5.3.31",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.48.0",
    "@types/node": "^20.11.18",
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.1",
    "@typescript-eslint/eslint-plugin": "^5.54.0",
    "@typescript-eslint/parser": "^5.54.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^2.1.5",
    "@vitest/ui": "^2.1.5",
    "autoprefixer": "latest",
    "eslint": "^8.50.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.1",
    "jsdom": "^26.1.0",
    "postcss": "latest",
    "tailwindcss": "3.4.17",
    "typescript": "^5.5.4",
    "vite": "^6.3.5",
    "vitest": "^2.1.5"
  }
}
