{
  "name": "card-game-pdf-transformer",
  "version": "1.0.0",
  "description": "A web application for transforming PDF files into print-and-play card game formats",
  "private": true,
  "type": "module",
  "keywords": [
    "pdf",
    "card-games",
    "print-and-play",
    "react",
    "typescript",
    "vite"
  ],
  "scripts": {
    "dev": "npm run copy-worker && npx vite",
    "build": "npm run copy-worker && tsc -b && npx vite build",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "preview": "npx vite preview",
    "start": "npm run dev",
    "copy-worker": "node -e \"require('fs').copyFileSync('node_modules/pdfjs-dist/build/pdf.worker.min.mjs', 'public/pdf.worker.min.js')\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:visual": "playwright test",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "analyze": "npm run build && npx vite-bundle-analyzer dist",
    "prepare": "husky install"
  },
  "dependencies": {
    "jspdf": "^3.0.1",
    "lucide-react": "^0.441.0",
    "pdfjs-dist": "^5.3.31",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@playwright/test": "^1.53.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.11.18",
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.1",
    "@typescript-eslint/eslint-plugin": "^5.54.0",
    "@typescript-eslint/parser": "^5.54.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "latest",
    "eslint": "^8.50.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.1",
    "fast-check": "^4.1.1",
    "husky": "^9.1.7",
    "jest": "^30.0.0",
    "jest-environment-jsdom": "^30.0.0",
    "lint-staged": "^16.1.1",
    "postcss": "latest",
    "prettier": "^3.5.3",
    "tailwindcss": "3.4.17",
    "ts-jest": "^29.4.0",
    "typescript": "^5.5.4",
    "vite": "^6.3.5",
    "vite-bundle-analyzer": "^0.22.3"
  }
}
